<h1>タスク作成</h1>
<% @task = Task.new unless @task %>
<%= form_for @task, url: task_new_path do |f| %>
  <div class="form-group">
    <%= f.label :task_name, "タスク名" %>
    <%= f.text_field :task_name %>
  </div>
  <div class="form-group">
    <%= f.label :term_at, "期限" %>
    <%= f.datetime_field :term_at %>
  </div>
  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
